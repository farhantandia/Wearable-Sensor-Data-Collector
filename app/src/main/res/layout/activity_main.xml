<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBack">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/Record"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:text="Record"
            android:layout_below="@id/tdate"
            android:textColor="@color/white"
            android:enabled="true"/>

        <TextView
            android:id="@+id/NameA"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="Data Collector with Kalman Filter"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/NameA"

            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown" />
        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinner1"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown" />

        <Spinner
            android:layout_width="wrap_content"
            android:id="@+id/activity"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinner2"
            android:textAlignment="center"
            android:layout_marginLeft="30dp"
            android:background="@android:drawable/btn_dropdown"
            android:textSize="19dp"
            android:spinnerMode="dropdown"
            />

        <TextView
            android:id="@+id/text_view_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:text="00:00"
            android:layout_below="@+id/activity"
            android:textColor="@color/colorAccent"
            android:textSize="23dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tdate"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Date Time"
            android:layout_marginLeft="100dp"
            android:textAlignment="center"
            android:layout_below="@+id/activity"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <Button
            android:id="@+id/Save"
            android:layout_width="65dp"
            android:layout_height="45dp"
            android:layout_marginLeft="30dp"
            android:text="Reset"
            android:layout_below="@+id/text_view_countdown"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:visibility="invisible"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/note"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_below="@id/Record"
            android:layout_marginLeft="30dp"
            android:text="*Input the parameter before record the IMU data"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Made by Farhan Tandia"
            android:textSize="11sp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/note"
            android:textColor="@color/white"
            android:paddingBottom="20dp"
            android:layout_marginLeft="50dp"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>
</ScrollView>

